{
  "name": "@snailcide/o-wool2022",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "run-p -sr  build-watch shopify:serve && --live-reload hot-reload",
    "deploy": "run-s build webpack && cd shopify && shopify theme push",
    "build-watch": "vue-cli-service build-watch --mode development",
    "build": "vue-cli-service build",
    "clean": "run-s clean:dist clean:snippets",
    "clean:dist": "rm -R -f dist   &&   rm -R -f shopify/assets",
    "clean:snippets": " rm -f shopify/snippets/s-*.liquid",
    "test:build": "run-s  webpack",
    "webpack": "webpack --config=webpack.script.tags.ts",
    "shopify:serve": "cd shopify && shopify theme serve",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@iconify/vue": "^3.2.1",
    "@shopify/admin-graphql-api-utilities": "^1.0.9",
