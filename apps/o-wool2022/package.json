    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "babel-jest": "^27.0.6",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.5",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.4",
