    "@vue/apollo-composable": "^4.0.0-alpha.16",
    "@vue/apollo-option": "^4.0.0-alpha.16",
    "@vueuse/core": "^8.2.0",
    "add": "^2.0.6",
    "core-js": "^3.8.3",
    "graphql": "^16.3.0",
    "pinia": "^2.0.12",
    "vue": "^3.2.13",
    "vue-inline-svg": "^3.1.0",
