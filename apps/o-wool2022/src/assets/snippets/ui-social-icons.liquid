<div id="umbrella">
    <ul class="text-2xl text-red-500">
        {% if settings.sm_facebook %}
            <li class="icon facebook">
                <a href="{{ settings.sm_facebook_link }}" target="_blank">
                    <g-icon path="eva:facebook-fill"/>
                </a>
            </li>{% endif %}
        {% if settings.sm_twitter %}
            <li class="icon twitter">
                <a href="{{ settings.sm_twitter_link }}"  target="_blank">
                    <g-icon path="dashicons:twitter-alt" /></a>
            </li>{% endif %}
        {% if settings.sm_ravelry %}
            <li class="icon ravelry">
                <a href="{{ settings.sm_ravelry_link }}" target="_blank">
                    <g-icon path="fa-brands:ravelry" />
                </a>
            </li>{% endif %}
        {% if settings.sm_pinterest %}
            <li class="icon pinterest">
                <a href="{{ settings.sm_pinterest_link }}" target="_blank">
                    <g-icon path="fa-brands:pinterest" />
                </a>
            </li>{% endif %}
        {% if settings.sm_instagram %}
            <li class="icon instagram" >
                <a href="{{ settings.sm_instagram_link }}" target="_blank">
                    <g-icon path="ant-design:instagram-filled" />
                </a>
            </li>{% endif %}
        {% if shop.customer_accounts_enabled %}
            <li class="customer-account-links">
                {% if customer %}
                    <p>{{ 'Log Out' | customer_logout_link }}</p>
                {% else %}
                    <p>{{ 'Log In' | customer_login_link }}</p>
                {% endif %}
            </li>
        {% endif %}

        {% if customer %}
            <li>
                <a href="/account">My Account</a>
            </li>
        {% endif %}


        <li class="cart-link">
            <g-icon path="mdi-light:cart" />

            <a href="/cart" class="num-items-in-cart">
              <span class="icon btn">
               {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}
              </span>
            </a>
        </li>
    </ul>
</div><!-- /#umbrella -->
