/** 
 * Radiance
 * Checkout CSS
 * 
 * Custom checkout CSS is disabled by default.
 * To enable it, rename this file to "checkout.css.liquid".
 */
 

/** 
 * Background 
 */

html{ background-color: #FFF; }

body, #main, #container { background: transparent !important; }


/** 
 * Generic
 */

body { 
border-top: solid 6px #AED2C2;  
color: #555555;
  font-family: Garamond, "Apple Garamond", "ITC Garamond Narrow", "New Century Schoolbook", "Century Schoolbook", "Century Schoolbook L", Georgia, serif;
  }

h1, h2, h3, h4, h5, h6 { 
  color: #555555; 
  line-height: 1.2;
  font-weight: bold; 
  margin: 0 0 .5em 0;
  }
h1{ font-size: 22px; }

a { color: #555555; }
a:hover { color: #adadad; }

input, textarea{
  border: solid 1px #adadad; 
  padding: 4px;
  color: #333;  
  }

label{ 
  font-weight: normal; 
  font-size: 13px;
  }

/** 
 * Layout
 */
#container{
  width: 904px;
  margin: 0 auto;
  }
#main,
#container.slim #main,
#content,
#footer{
  padding: 0;
  width: auto;
  }

#container{ font-size: 100%; } 

#container.slim{ width: 900px; }
#container.slim #main{ width: auto;}  

#addresses{
  background: #FFF;
  }

#email,
.group{
  width: 600px;
  margin: 0 0 20px 0;  
  padding: 20px;    
  background: #FFF;
  line-height: 1.5em;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border: none;
  }
.group{
  float: left;
  }

.group h3,
.pgroup h3,
#email label{
  font-weight: bold !important;
  text-transform:capitalize;
  color: #333;
  margin: 0 0 12px 0;
  padding: 0 0 8px 0;
  border-bottom: none;  
  }
#email input {font-size: 13px !important;width:255px;}
span.sign-in-message {display:block; margin-left:0; margin-top:4px;}  
  
/** 
 * Umbrella 
 */ 
#info-bar{
  display: none;
  }
  

/** 
 * Header
 */
#header, #container.slim #header {
  padding: 7px 0 34px;
  width:904px;
  background: url({{ 'hr.png' | asset_url }}) no-repeat center bottom;
  }
#tagline .subtitle{
  display: none;
  }

#logo{
  width:116px;
  height:136px;
  background: url({{ 'o-wool-logo.png' | asset_url }}) no-repeat;
  }
#tagline{ display: none; }

/** 
 * Overview
 */

 #overview{ /* styles from widgets in right column */
  width: 195px;
  padding: 150px 10px 10px 10px; /* make some room for the "wallet" */  
  float: right;
  border-radius: 0px;
  border: solid 1px #555;
  margin: 20px 0;
  position: relative;
  background: #FFF;
  overflow: hidden; height: 1%;
  }

#overview h2{
  display: none; /* hide: you know you're purchasing these things. */
  text-align: center;
  }

#overview #products{
  width: auto;
  float: none;
  border: none;
  }
#overview #wallet{
  margin: 0; padding: 10px;
  background:#FFF;
  width: 175px;
  height: 120px;
  position: absolute; top: 10px;
  text-align: center;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  }
#overview #cost{
  text-shadow: none;
  border-bottom: none;
  color:#555;
  font-size:21px;
  }
#overview .hint{
  color: #555;
  margin: 0 0 3px 0;
  display: block;
  }
#overview #steps{
  margin: 0; padding: 0 0 8px 0;
  display: block;
  font-size:16px;
  border-bottom: none;  
  }
#overview br{ display: none; }

#overview #thumbs{
  margin: 0;
  border-collapse: collapse;
  border:none;
  }
#overview #thumbs td{
  overflow: hidden; height: 1%;
  font-size: 100%;
  text-align: center;
  vertical-align: top;
  padding: 4px;
  border: none;
  }
#overview #thumbs div{
  float: none;
  width: 100%; height: auto;
  border: none;
  margin: 0 0 10px 0; padding: 0;
  }
#overview #thumbs img{ 
  display:none;
  }

#overview #thumbs h3{ color: #555;font-size:13px; }
#overview #thumbs span{ color: #555;font-size:12px; }

.slim #overview{ display: none; }

/** 
 * Checkout Form 
 */

.form{ width: 100%; }
.form label{ font-weight: normal; }

.form td{ padding: 5px 0; }
.form td.lbl{ width: 165px; text-align: right; padding-right: 8px; }
.form td input{ font-size: 13px; width: 200px; }

.form .inline li{ 
  float: none;
  width: 100% !important; 
  margin: 0 !important; 
  overflow: hidden;
  height: 1%;
  padding: 0 0 8px 0;
  }
.form .inline label{
  float: left;
  width: 57px; text-align: right; padding-right: 8px;
  }
.form .inline select{
  float: left;
  }
#billing_address_province_li,
#shipping_address_province_li{ padding: 0; }

/* Form Errors */
.field-with-errors{
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border:none;
  background: #FFF;
  font-size:12px;
  text-transform:uppercase;   
  }

/* Billing/Shipping Addresses */
#addresses{
  overflow: hidden;
  height: 1%;
  }

#addresses .gleft,
#addresses .gright{
  width: 275px;
  padding: 0;
  margin: 0;
  }
#addresses .gleft{ 
  float: left; 
  border-right: solid 1px #adadad;
  padding-right: 20px;
  }
#addresses .gright{ float: right; }

#billing_address_phone{
  margin: 0 0 10px 0;
  }
#billing-is-shipping td{
  border: solid 1px {{ settings.footer_bg_colour }};
  padding: 5px;
  }

#addresses #shipping-same.address-notification{
  padding: 10px;
  text-align: left;
  background: {{ settings.footer_bg_colour }} !important;
  color: {{ settings.footer_link_colour }};
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;  
  border: none;
  }

/* paying for your order */ 
#payment p.sst{
  margin-bottom: 0;
  }

.sst .gleft{
  width: 30%;
  }
#credit-card-info.gright{
  margin: 0 0 0 10px;
  float: left;
  }

#payment-methods li{
  border-bottom: none;  
  }



/* Next/Prev Step */
#buttons{
  clear: both;
  background: #FFF;
  border: none;
  }
#buttons a{ color: #aed2c2;}
#buttons a:hover{ opacity:0.7;}

#buttons small{ font-size: 12px; }

#buttons input{ font-size: 13px; }
#buttons #commit-button,
#buttons #complete-purchase,
#create-account-btn {
  	display: inline-block;
	  background: #FFF;
	  border: solid 1px #aed2c2;
	  padding: 5px 10px 4px 10px;
	  font-family:Garamond, "Apple Garamond", "ITC Garamond Narrow", "New Century Schoolbook", "Century Schoolbook", "Century Schoolbook L", Georgia, serif;
	  text-decoration: none;  
	  font-weight: normal;
	  font-size:18px;
	  font-style:italic;
	  letter-spacing: 1px;
	  text-align: center;
	  cursor: pointer;
  }
#buttons #commit-button:hover,
#buttons #complete-purchase:hover,
#create-account-btn:hover {
   opacity:0.6;
  }
#container.slim #main {
width: 700px;
text-align: center;
margin: 20px auto 100px;
overflow: hidden;
}

/** 
 * Footer 
 */
 #footer, #container.slim #footer {
  clear: both;
  width:904px;
  margin-top:30px;
  padding: 15px 0 14px 0;
  background: url({{ 'hr.png' | asset_url }}) no-repeat center top;
  }
#footer a{ color: #aed2c2;}
#footer a:hover{ color: #aed2c2;}


/** 
 * General Weirdness 
 */
#gateway-logos{ 
  /* this ONLY ever showed up in IE8 during my testing. VERY weird. */
  display: none;
  }
