<div id="umbrella flex">
    <ul class="text-2xl text-dark hover:text-accent-secondary">

        {% render 's-ui-social-icon', social_id: 'facebook', social_icon_path: 'eva:facebook-fill' %}
        {% render 's-ui-social-icon', social_id: 'twitter', social_icon_path: 'dashicons:twitter-alt' %}
        {% render 's-ui-social-icon', social_id: 'ravelry', social_icon_path: 'fa-brands:ravelry' %}
        {% render 's-ui-social-icon', social_id: 'pinterest', social_icon_path: 'fa-brands:pinterest' %}
        {% render 's-ui-social-icon', social_id: 'instagram', social_icon_path: 'ant-design:instagram-filled' %}

        {% if shop.customer_accounts_enabled %}
            <li class="customer-account-links">
                {% if customer %}
                    <p>{{ 'Log Out' | customer_logout_link }}</p>
                {% else %}
                    <p>{{ 'Log In' | customer_login_link }}</p>
                {% endif %}
            </li>
        {% endif %}

        {% if customer %}
            <li>
                <a href="/account">My Account</a>
            </li>
        {% endif %}


        <li class="cart-link">
            <g-icon path="mdi-light:cart" />

            <a href="/cart" class="num-items-in-cart">
              <span class="icon btn">
               {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}
              </span>
            </a>
        </li>
    </ul>
</div><!-- /#umbrella -->
