<!DOCTYPE html>
<!--[if lt IE 7 ]>
<html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>
<html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>
<html lang="en" class="no-js ie8"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en" class="no-js"> <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>

    <link rel="canonical" href="{{ canonical_url }}"/>
    <link rel="shortcut icon" type="image/x-icon" href="{{ 'favicon.ico' | asset_url }}"/>

    {% render 's-script-tag', script-tag: "preload" %}

    {% assign maxmeta = 155 %}
    {% if template contains 'product' %}
        <meta name="description" content="{{ product.description | strip_html | strip_newlines | truncate: maxmeta | escape }}"/>
    {% elsif template contains 'page' %}
        <meta name="description" content="{{ page.content | strip_html | strip_newlines | truncate: maxmeta | escape }}"/>
    {% elsif template == 'index' and shop.description != '' %}
        <meta name="description" content="{{ shop.description }}"/>
    {% endif %}


     <!-- Open Graph tags for Facebook Like buttons -->
    <meta property="og:site_name" content="{{ shop.name | escape }}"/>
    {% if template contains 'product' %}
        <meta property="og:image" content="{{ product.featured_image | product_img_url: 'compact' }}"/>
    {% else %}
        {% if settings.logo_image == "logo.png" %}
            <meta property="og:image" content="{{ 'logo.png' | asset_url }}"/>
        {% endif %}
    {% endif %}
    <!-- END  tags for Facebook  -->


    {% if template == 'index' %}
        <title>{{ shop.name }}</title>
    {% elsif template == '404' %}
        <title>Page Not Found | {{ shop.name }}</title>
    {% else %}
        <title>{{ page_title | remove: '*' }} | {{ shop.name }}</title>
    {% endif %}

    {{ content_for_header }}

    <!-- CSS TAGS -->
    {% comment %} {{ 'style.css' | asset_url | stylesheet_tag }}{% endcomment %}
    {% if template contains 'product' and settings.main_image_display == 'Lightbox' %}
        {{ 'jquery.fancybox-1.3.4.css' | asset_url | stylesheet_tag }}
    {% endif %}
    {% comment %}{{ 'custom.css' | asset_url | stylesheet_tag }}{% endcomment %}
    {{ 'slick.css' | asset_url | stylesheet_tag }}
    {% render 's-boost-pfs-style' %}
    {% render 's-script-tag', script-tag: "css" %}

    <!-- SCRIPTS TAGS -->
    {{ 'modernizr.js' | asset_url | script_tag }}
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
    {% if template contains 'customers' %}
        {{ "shopify_common.js" | shopify_asset_url | script_tag }}
        {{ "customer_area.js" | shopify_asset_url | script_tag }}
    {% endif %}

    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js' | script_tag }}
    {{ 'jquery.selectbox-0.2.min.js' | asset_url | script_tag }}

    {% render 's-boost-pfs' %}
    {% render 's-script-tag', script-tag: "script-url" %}
    {% render 'shogun-head' %}
</head>
<!--END META-->

<!--BODY -->
<body border="t-8 solid accent-primary"
        class="{% if customer %}customer-logged-in {% endif %}template{{ template | split: '.' | first | camelize }} {{ page.title }} {{ product.title }}">

<div id="main-content-wrapper bg-yellow-500" class="w-[85%] text-left m-auto" font="serif garamond">

    <!-- Header headerApp-->
    <header id="headerApp" class="top clearfix">
        <button type="button" class="mobile-nav-trigger navbar-toggle" id="MobileNavTrigger" data-menu-state="close" style="display:none;">
            <span class="text-2xl icon icon-hamburger sr-only" aria-hidden="true"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <!--{{ 'layout.navigation.menu' | t }}--->
        </button>

        <!-- LOGO -->
        <a class="site-title flex <md:justify-center" href="/" title="Home">
            <div class="g-svg w-120px">
                <inline-svg src="{{ 'o-wool-logo-w-text.svg' | asset_url }}" alt="{{ shop.name | escape }}"/>
            </div>
            <img class="hidden" src="{{ 'o-wool-logo.png' | asset_url }}" alt="{{ shop.name | escape }}"/>
        </a>
        {% render 's-mobile-main-nav' with linklists[section.settings.nav_menu] %}
        {% render 's-main-nav' %}
        {% render 's-header-umbrella' %}
    </header>

    <!-- VUE :mainApp Content  -->
    <main id="mainApp">
        {% render 's-ui-divider' %}

        <div class="theme-accent-primary  border">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <div class="theme-accent-primary-inverse ">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <div class="theme-accent-secondary  border">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <div class="theme-accent-secondary-inverse ">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <div class="theme-primary border">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <div class="theme-primary-inverse ">
            <g-icon :inline='true' path="bx:cart-alt"></g-icon>
            I AM A BUTTON!!! </div>

        <!-- Main template content -->
        {{ content_for_layout }}

        <!-- not sure if still needed. -->
        {% if template == 'list-collections' %}
            {% include 'collection-listing' %}
        {% endif %}
        {% if template contains "blog" %}
            {% include 'col-widgets' %}
        {% elsif template contains "article" %}
            {% include 'col-widgets' %}
        {% endif %}
        <!-- end sure if still needed. -->

    </main><!-- /.content -->
    <!-- VUE : footer app   -->
    {% render 's-footer' %}
</div><!-- /.wrapper -->

<!-- SCRIPT TAGS -->
{% render 's-scripts-body-old' %}
{% render 's-scripts-body' %}

{% render 's-scripts-body-product' %}
{% render 's-script-tag', script-tag: "js" %}
</body>
</html>
