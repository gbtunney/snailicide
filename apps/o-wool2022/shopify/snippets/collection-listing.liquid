<div id="col-main" class="all-collections">

    <section class="diagonal-divider {{ collection.handle }} clearfix">
        <header class="section-details clearfix">
            <h2 class="section-title">Product Collections</h2>
        </header>

        <ul id="collection-grid" class="product-grid">
            {% for collection in collections %}
                {% unless collection.handle == 'frontpage' %}
                    <li class="{% cycle '', '', '', ' last-in-row' %}">
                        <div class="product-grid-item">
                            <div class="collection-image">
                                <a href="{{ collection.url }}" title="Browse our {{ collection.title | escape }} collection">
                                    {% if collection.image %}

                                        <img src="{{ collection.image.src | collection_img_url: 'large' }}" class="product-photo" alt="{{ collection.title | escape }}"/>
                                    {% else %}
                                        <h2>Gilllian</h2>
                                        {{ collection.products.first.featured_image  | img_url: '1000x' | img_tag }}
{% comment %}                                        <img src="{{ collection.products.first.featured_image | product_img_url: 'large' }}" class="product-photo" alt="{{ collection.title | escape }}"/>
{% endcomment %}                                    {% endif %}
                                </a>
                            </div>
                            <div class="product-information">
                                <a href="{{ collection.url }}" title="Browse our {{ collection.title | escape }} collection">
                                    {{ collection.title }}
                                </a>
                                <small class="num-in-collection">
                                    {{ collection.all_products_count }} {{ collection.all_products_count | pluralize: 'item', 'items' }}
                                </small>
                            </div>
                        </div>
                    </li>
                {% endunless %}
            {% endfor %}
        </ul>
    </section>
</div><!-- /#col-main -->
