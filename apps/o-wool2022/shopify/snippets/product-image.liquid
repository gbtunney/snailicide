<div class="left_stiky">
{% include 'breadcrumbs' %}
<div id="active-wrapper">
    {% if settings.main_image_display == 'Lightbox' %}
    <a href="{{ product.featured_image | product_img_url: 'original' }}" title="{{ product.featured_image.alt | escape }}" rel="fancybox">
    {% endif %}     
      <img style="max-width:303px" src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ product.title | escape }}" id="large-thumb" />
    {% if settings.main_image_display == 'Lightbox' %}
    </a>
    {% endif %}
  
  
</div>
  {% for tag in product.tags %}
		{% if tag contains 'GLOBAL ORGANIC' %}
<span class="global_product_ic"><img src="//cdn.shopify.com/s/files/1/0155/0473/t/9/assets/global_organic2.png" alt="" /></span>
     	{% endif %}
  {% if tag contains 'GOTS logo' %}
<span class="global_product_ic"><img src="//cdn.shopify.com/s/files/1/0155/0473/files/GOTS-logo.png" alt="" /></span>  
     	{% endif %}
  {% if tag contains 'GOTSCERES-029' %}
<span class="global_product_ic"><img src="//cdn.shopify.com/s/files/1/0155/0473/files/RGW-GOTS-logo-vert.png" alt="" /></span>
     	{% endif %}
     {% endfor %}
</div> 
