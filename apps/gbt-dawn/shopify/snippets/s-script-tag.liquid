{% comment %}
When using this snippet, pass a string using the "with‚Äù parameter to identify script tag section you want to output
EX: {% include 'script-tag' with 'preload' %}
values: preload , css, js
{% endcomment %}
{% assign script-tag-section = script-tag %}
{% case script-tag-section %}
	{% when 'script-url' %}
		<script src="https://unpkg.com/windicss-runtime-dom"></script>
	{% when 'preload' %}
		
		<link rel="preload" href="{{ 'app.js' | asset_url }}" as="script">
		<link rel="preload" href="{{ 'chunk-vendors.js' | asset_url }}" as="script">
	{% when 'css' %}
		
	{% when 'js' %}
		
		<script src="{{ 'app.js' | asset_url }}" defer="defer"></script>
		<script src="{{ 'chunk-vendors.js' | asset_url }}" defer="defer"></script>
{% endcase %}
