{% render 'gbt-block-iconify', _settings: section.settings %}
<script type="application/json">
{% schema %}
{
  "name": "UI Icon",
  "class":"vue",
  "settings": [
    {
      "id": "icon_path",
      "type": "text",
      "label": "Icon Path or SVG Filename:",
      "default": "mdi:alert"
    },
    {
      "type": "checkbox",
      "id": "color_toggle",
      "default": false,
      "label": "Override color",
      "info": "Use TAILWIND classes for text-red-500 etc."
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Color",
      "default": "#ffffff"
    },
    {
      "id": "custom_styles",
      "type": "text",
      "label": "Text"
    },
    {
      "id": "css_classes",
      "type": "text",
      "label": "Add custom css below"

    }
  ],
  "presets": [
    {
      "name": "iconify-icon",
      "category": "Custom"
    }
  ]
}
{% endschema %}
</script>
