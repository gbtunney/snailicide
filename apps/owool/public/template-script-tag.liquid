{% assign script-tag-section = script-tag %}
<gillianme>
	tne value is::: {{ script-tag-section }}
</gillianme>
{% case script-tag-section %}

{% when 'preload' %}
	<% for (var index in htmlWebpackPlugin.options.files_js) { %><link rel="preload" href="{{ '<%= htmlWebpackPlugin.options.files_js[index] %>' | asset_url }}" as="script"><% } %>
	<% for (var index in htmlWebpackPlugin.options.files_css) { %><link rel="preload" href="{{ '<%= htmlWebpackPlugin.options.files_css[index] %>' | asset_url }}" as="script"><% } %>
{% when 'css' %}
	<% for (var index in htmlWebpackPlugin.options.files_css) { %>{{ '<%= htmlWebpackPlugin.options.files_css[index] %>' | asset_url | stylesheet_tag }}<% } %>
{% when 'js' %}
	<% for (var index in htmlWebpackPlugin.options.files_js) { %><script src="{{ '<%= htmlWebpackPlugin.options.files_js[index] %>' | asset_url }}" defer="defer"></script><% } %>
{% endcase %}
