{
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    // Transpilation settings.
    "module": "ES2020",
    "target": "ES5",
    // Output settings.
    "charset": "utf-8",
    "newLine": "LF",
    "sourceMap": true,
    // Type declaration settings.
    "declaration": true,
    "declarationDir": "types/",
    "declarationMap": true,
    //this is my lint stuff
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}
